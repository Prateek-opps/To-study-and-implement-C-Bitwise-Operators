#include <iostream>
using namespace std;

int main(){
    int a=5; // 101
    int b=3; //011
    int bitwise_and=a&b;
    int bitwise_or=a|b;
    int right_shift=a>>1;
    int left_shift=b<<2;
    int bitwise_xor=a^b; 
    int bitwise_not=~a;
    cout<<"AND :"<<bitwise_and<<endl;
    cout<<"OR : "<<bitwise_or<<endl;
    cout<<"NOT : "<<bitwise_not<<endl;
    cout<<"XOR : "<<bitwise_xor<<endl;
    cout<<"LEFT_SHIFTED : "<<left_shift<<endl;
    cout<<"RIGHT_SHIFTED : "<<right_shift<<endl;
  return 0;
} 

/*Output:-
AND :1
OR : 7
NOT : -6
XOR : 6
LEFT_SHIFTED : 12
RIGHT_SHIFTED : 2
*/
