#include <iostream>
using namespace std;

  int main(){
      int a=5;
     int bit_to_be_set;
     int bit_to_be_reset;
      int set,reset;
      cout << "Enter the bit position to be set:"<< endl;
      cin >> bit_to_be_set;
      set=a|(1<<bit_to_be_set);
      cout << "Enter the position to be reset:";
      cin >> bit_to_be_reset;
      reset=a&(~(2<<bit_to_be_reset));
      cout << "Your Number:";
      
      return 0; }  
/*Output:-
Enter the bit position to be set:
2
Enter the position to be reset:3
Your Number:
*/
